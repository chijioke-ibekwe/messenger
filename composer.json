{
  "name": "chijioke-ibekwe/messenger",
  "description": "Multi-channel Laravel notification sender",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Chijioke Ibekwe",
      "email": "ibekwe.chijioke18@gmail.com"
    }
  ],
  "require": {
    "sendgrid/sendgrid": "~7"
  },
  "require-dev": {
    "orchestra/testbench": "7.0",
    "phpunit/phpunit": "^9.6"
  },
  "autoload": {
    "psr-4": {
      "ChijiokeIbekwe\\Messenger\\": "src/",
      "ChijiokeIbekwe\\Messenger\\Database\\Factories\\": "database/factories"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ChijiokeIbekwe\\Messenger\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  },
  "extra": {
    "laravel": {
      "providers": [
        "ChijiokeIbekwe\\Messenger\\MessengerServiceProvider"
      ]
    }
  }
}
